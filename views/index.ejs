<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather App</title>
    <link rel="stylesheet" href="/style.css" />
</head>

<body>
    <div class="container">
        <h1>Weather App</h1>
        <form action="/weather" method="get">
            <input type="text" name="city" placeholder="Enter city name" value="<%= weather ? weather.name : '' %>" />
            <button type="submit">Get Weather</button>
        </form>

        <% if (weather) { %>
            <div class="weather-info">
                <h2>Weather in
                    <%= weather.name %>
                </h2>
                <p>Temperature:
                    <%= weather.main.temp %> °F</p>
                <p>Humidity:
                    <%= weather.main.humidity %> %</p>
                <p>Wind Speed:
                    <%= weather.wind.speed %> m/s</p>
                <p>Condition:
                    <%= weather.weather[0].description %>
                </p>
            </div>
            <% } %>
    </div>

    <% if (forecast) { %>
        <div class="forecast-info-container">
            <h3>3-Day Forecast:</h3>
            <div class="forecast-info">
                <% forecast.list.forEach(function(forecastItem) { %>
                    <div class="forecast-item">
                        <p>
                            <%= new Date(forecastItem.dt_txt).toLocaleDateString() %>
                        </p>
                        <p>Temp:
                            <%= forecastItem.main.temp %> °F</p>
                        <p>Condition:
                            <%= forecastItem.weather[0].description %>
                        </p>
                    </div>
                    <% }) %>
            </div>
        </div>
        <% } %>
            <% if (error) { %>
                <div class="container">
                    <p class="error">
                        <%= error %>
                    </p>
                </div>
                <% } %>
</body>

</html>